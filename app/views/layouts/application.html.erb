<!DOCTYPE html>
<html>
<head>
  <title>TestDrivenTrello</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <% if logged_in? %>
    <%= link_to("logout", session_url, method: 'delete') %>
  <% else %>
    <%= link_to("Signup", new_user_url) %>
    <%= link_to("Sign in", new_session_url) %>
  <% end %>
<%= yield %>

</body>
</html>
